<div>
  <% @story.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
</div>

<div>

  <%= form_tag("/edited_story", method: "post") do %>
  <input type="hidden" name="stories[id]" value="<%= @story.id%>">
    <h3>Tile:</h3>
    <input type="text" name="stories[title]" value="<%= @story.title %>">
    <h3>Summary:</h3>
    <textarea name="stories[summary]" rows= "20" cols="75" placeholder="Summary"><%= @story.summary %></textarea>
    <input type="hidden" name="_method" value="put">
    <input type="submit">
    <% end %>
</div>
